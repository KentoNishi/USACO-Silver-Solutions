{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and run C++",
            "type": "shell",
            "command": "g++ -std=c++11 main.cpp -g -o result;time ./result;echo;echo;find . -type f -name \"*.out\" -exec cat {} +;echo;",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        }
    ]
}